---
layout: 'base.njk'
---

<div class="container px-3 px-md-5">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1 text-capitalize"> {{ title }}</h1>
                            <!-- Post meta content-->
                            <div class='row align-items-center my-2'>
                                <div class="text-muted fst-italic mb-2 mb-md-0 col-md-6">Posted on {{ date | postDate }} by {{ author }}</div>
                                <div class='col-md-6'>
                                    
                                    <div class=''>
                                        <a class='link-primary' href='https://www.facebook.com/'><i class="bi bi-facebook fs-2 me-3 mx-0 mx-md-3"></i></a>
                                        <a class='link-info' href='https://twitter.com/home'><i class="bi bi-twitter fs-2 mx-3"></i></a>
                                        <a class='link-danger' href='https://www.youtube.com/'><i class="bi bi-youtube fs-2 mx-3"></i></a>
                                    </div>
                                </div>
                            </div>
                            
                            
                            <!-- Post categories-->
                        
                            {% for eachTag in tags %}

                                <p class="badge bg-secondary text-decoration-none link-light text-capitalize p-2">{{ eachTag }}</p>

                            {% endfor %}

                        </header>
                        <!-- Preview image figure-->
                        <figure class="mb-4"><img class="img-fluid rounded" src="{{ image }}" alt="..."></figure>
                        <!-- Post content-->
                        
                    </article>
                    <!-- Comments section-->
                </div>

              </div>

              {{ content | safe }}

              </div>
            


    </div>