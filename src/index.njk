---
title: Home
layout: 'base.njk'
---

    <div class="container">
      

        <div id="myCarousel" class="carousel slide pointer-event my-4 d-flex justify-content-center" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class="active" aria-current="true"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
          </div>
          
          <div class="carousel-inner row">

            {%- set topThreeCarousel = collections.post | reverse | limit(3) -%}

            {%- for mostRecent in topThreeCarousel -%}

            <div class="carousel-item h-100 col {% if loop.index0 == 0 %}active{% endif %}">   
              <div class="p-3 p-lg-4 mb-4 h-100 text-white bg-dark row">
                  <div class="col-md-8 pe-4">
                    <h1 class="display-5 fw-bold text-capitalize">{{ mostRecent.data.title }}</h1>
                    <p class="lead my-3 limit-length-class">{{ mostRecent.data.description }}</p>
                    <p class="lead mb-0"><a href="{{ mostRecent.url }}" class="text-white fw-bold">Continue reading...</a></p>
                  </div>

                  <div class='col-lg-1 hide-spacer-col'>
                  </div>

                  <div class='col-lg-3'>

                    <img class='img-fluid' src="{{ mostRecent.data.image }}">

                  </div>
              </div>
            </div>

            {% endfor %}

          </div>
          <button class="visually-hidden carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="visually-hidden carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="visually-hidden carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="visually-hidden carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <div class='row my-4 mx-2'>

          <div class='col-md-1 fw-bold fs-2'>Top</div>
          <div class='col-md-11 ps-0 ps-md-4 ps-lg-0' style='place-self: center;'><hr style='width: 100%; border: 2px solid black; opacity: 90%'></div>

        </div>

        <div class="row mb-4">
            
            {%- set topRecentSixPosts = collections.post | reverse | limit(3) -%}

            {%- for post in topRecentSixPosts -%}

              <div class="col-md-4 my-4 my-md-0">
              <div class="row g-0 border overflow-hidden h-100 flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col-md-12">
                  <img src="{{ post.data.image }}" class='img-fluid'>
                </div>
                <div class="col-md-12 p-4 d-flex flex-column position-static h-100">
                  <strong class="d-inline-block mb-2 text-primary">{{ post.data.post_type }}</strong>
                  <h3 class="mb-0 text-capitalize">{{ post.data.title }}</h3>
                  <div class="mb-1 text-muted">{{ post.data.date | postDate }}</div>
                  <p class="card-text">{{ post.data.description }}</p>
                  <a href="{{ post.url }}" class="stretched-link">Continue reading</a>
                </div>
                
              </div>
            </div>

            {% endfor %}
            
            
          </div>

        
            
            
    </div>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
